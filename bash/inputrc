$include /etc/inputrc

# Vi mode
set editing-mode vi
set show-mode-in-prompt on
set vi-cmd-mode-string "\1\e[2 q\2"
set vi-ins-mode-string "\1\e[6 q\2"
set keyseq-timeout 0

# History
set history-size 2000

# Human readable ?
set colored-stats On
set completion-ignore-case Off
set completion-prefix-display-length 3
set mark-symlinked-directories On
set show-all-if-ambiguous On
set show-all-if-unmodified On
set visible-stats On

# Bindings
"\C-l" clear-screen
"\C-f":"source goto-file\C-m"

# Commands for vi command mode
set keymap vi-command
# Disable visual selection on vi command mode because it enters the actual
# "edit command on editor" mode, which is dangerouse because it automatically
# executes the command on exit
"v":""

# Return to vi-insert so bindings on bashrc work
set keymap vi-insert
