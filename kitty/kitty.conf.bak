# Remote control
allow_remote_control socket-only
listen_on unix:/tmp/kitty

shell fish

term tmux-256color

# Fonts 
include fonts.conf

# Scrollback 
include scrollback.conf

# Mouse 
copy_on_select yes
strip_trailing_spaces smart

# Terminal bell
enable_audio_bell no

# Windows
include windows.conf

# Tabs 
include tabs.conf

# Shell integrations 
shell_integration no-cursor

# Color 
background_opacity 0.97

# Keybindings
include keybindings.conf

# BEGIN_KITTY_THEME
# Tokyo Night
include current-theme.conf
# END_KITTY_THEME
