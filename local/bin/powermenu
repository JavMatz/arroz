#!/usr/bin/env bash

function powermenu {
	options="Cancel\nShutdown\nLock\nLogout\nReboot\nHibernate"
	selected=$(echo -e $options | dmenu -i -p "Power")
	if [[ $selected =  "Shutdown" ]]; then
		poweroff
	elif [[ $selected =  "Lock" ]]; then
		i3lock --nofork --image /hdd0/Im√°genes/Wallpapers/Draw/Anime/lain2.png 
	elif [[ $selected =  "Logout" ]]; then
        i3-msg exit
	elif [[ $selected = "Reboot" ]]; then
		reboot
	elif [[ $selected = "Hibernate" ]]; then
		systemctl suspend
	elif [[ $selected = "Cancel" ]]; then
		return
	fi
}

powermenu
