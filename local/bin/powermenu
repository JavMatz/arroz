#!/bin/bash

function powermenu {
	options="ğŸ—™ Cancel\nâ» Shutdown\nâš¿ Lock\nğŸ¢± Logout\nğŸ—˜ Reboot\nâ¾ Hibernate"
	selected=$(echo -e $options | rofi -dmenu -i -p "Power options" -l 6)
	if [[ $selected =  "â» Shutdown" ]]; then
		poweroff
	elif [[ $selected = "âš¿ Lock" ]]; then
		i3lock
	elif [[ $selected = "ğŸ¢± Logout" ]]; then
		i3-msg exit
	elif [[ $selected = "ğŸ—˜ Reboot" ]]; then
		reboot
	elif [[ $selected = "â¾ Hibernate" ]]; then
		systemctl suspend
	elif [[ $selected = "ğŸ—™ Cancel" ]]; then
		return
	fi
}

powermenu
