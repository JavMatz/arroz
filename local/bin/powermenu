#!/bin/bash

function powermenu {
	options="🗙 Cancel\n⏻ Shutdown\n⚿ Lock\n🢱 Logout\n🗘 Reboot\n⏾ Hibernate"
	selected=$(echo -e $options | rofi -dmenu -i -p "Power options" -l 6)
	if [[ $selected =  "⏻ Shutdown" ]]; then
		poweroff
	elif [[ $selected = "⚿ Lock" ]]; then
		i3lock
	elif [[ $selected = "🢱 Logout" ]]; then
		i3-msg exit
	elif [[ $selected = "🗘 Reboot" ]]; then
		reboot
	elif [[ $selected = "⏾ Hibernate" ]]; then
		systemctl suspend
	elif [[ $selected = "🗙 Cancel" ]]; then
		return
	fi
}

powermenu
