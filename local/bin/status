#!/usr/bin/env bash
# Display a simple status for dwm

display_vol() {
    if [ $(pamixer --get-mute) == "true" ]
    then
        printf "ðŸ”‡ MUTE"
    else
        VOL=$(pamixer --get-volume)
        printf "ðŸ”Š $VOL%%"
        # if [ $VOL -gt 70 ]
        # then
        #     printf "[###]"
        # elif [ $VOL -gt 30 ]
        # then
        #     printf "[##-]"
        # elif [ $VOL -gt 0 ] || [ $VOL -eq 0 ]
        # then
        #     printf "[---]"
        # fi
    fi
}

while true; do
    DATE=$(date +"%A %B %e, %H:%M")
    LOADAVG=$(cat /proc/loadavg | cut -d" " -f 1)
    xsetroot -name " $(display_vol) ï¸™ ðŸ’» $LOADAVG ï¸™ ðŸ“… $DATE "
    sleep 0.5
done
