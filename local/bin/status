#!/usr/bin/env bash
# Display a simple status for dwm

pomodoro () {
	if [ -e /tmp/workTimer ]
	then
		CYCLE=$(cat /tmp/workTimer | cut -d" " -f 1)
		TIME=$(cat /tmp/workTimer | cut -d" " -f 2)
		printf "ğŸ… $CYCLE: $TIME min remaining"
	elif [ -e /tmp/restTimer ]
	then
		CYCLE=$(cat /tmp/restTimer | cut -d" " -f 1)
		TIME=$(cat /tmp/restTimer | cut -d" " -f 2)
		printf "ğŸ… $CYCLE: $TIME min remaining"
	else
		printf ""
	fi

}

display_vol() {
    if [ $(pamixer --get-mute) == "true" ]
    then
        printf "ğŸ”‡ MUTE"
    else
        VOL=$(pamixer --get-volume)
        printf "ğŸ”Š $VOL%%"
    fi
}

while true; do
    DATE=$(date +"%A %B %e, %H:%M")
    LOADAVG=$(cat /proc/loadavg | cut -d" " -f 1)

	xsetroot -name " $(pomodoro) ï¸™ $(display_vol) ï¸™ ğŸ’» $LOADAVG ï¸™ ğŸ“… $DATE "

    sleep 0.5
done
