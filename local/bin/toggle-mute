#!/bin/bash

pactl set-sink-mute @DEFAULT_SINK@ toggle

volume="$(pamixer --get-volume)"
MUTE=$(pamixer --get-mute)

if [[ "$MUTE" == "true" ]]
then
    notify-send -t 900 -a "changeVolume" -u low -i audio-volume-muted -h string:x-dunst-stack-tag:$msgTag "Muted"
else
    notify-send -t 900 -a "changeVolume" -u low -i audio-volume-high -h string:x-dunst-stack-tag:$msgTag \
    -h int:value:"$volume" "Volume: ${volume}%"
fi
