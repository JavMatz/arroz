mod4 + shift + Return
    st

mod4 + shift + i
    firefox

mod4 + p
    j4-dmenu-desktop --no-generic --term="$TERMINAL"

mod4 + ctrl + p
    dmenu-power

/* Volume control */
mod4 + F5
    pactl set-source-mute @DEFAULT_SOURCE@ toggle
mod4 + F6
    pactl set-sink-mute @DEFAULT_SINK@ toggle
mod4 + shift + F6
    i3_scratchpad_show_or_create 'pipewire' 'pavucontrol'
mod4 + F7
    pactl set-sink-volume @DEFAULT_SINK@ -5%
mod4 + F8
    pactl set-sink-volume @DEFAULT_SINK@ +5%

/* Media control */
mod4 + F9
    playerctl previous
mod4 + F10
    playerctl play-pause
mod4 + F11
    playerctl next

/* System monitor */
mod4 + shift + F12
    i3_scratchpad_show_or_create 'sysmon' 'st -e htop -t htop'

/* Open file manager */
mod4 + shift + f
    i3_scratchpad_show_or_create 'fileManager' 'st -e lf'

Print
    flameshot gui
